@model Web_Subasta.Models.ViewModels.RegisterViewModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <section class="vh-100" style="background-color: #C7CACA;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card" style="border-radius: 1rem; width: auto;">
                        <div class="row g-0">
                            <div class="col-12 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">
                                    <form asp-controller="Register" asp-action="Reg" method="post">
                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        </div>
                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Registrarse</h5>

                                        <!-- Campo para correo electrónico -->
                                        <div class="form-outline mb-4">
                                            <input asp-for="Email" class="form-control form-control-lg" id="form2Example17" />
                                            <label asp-for="Email" class="form-label">Email</label>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <!-- Campo para contraseña -->
                                        <div class="form-outline mb-4">
                                            <input asp-for="Contrasenia" type="password" class="form-control form-control-lg" id="form2Example27" />
                                            <label asp-for="Contrasenia" class="form-label">Contraseña</label>
                                            <span asp-validation-for="Contrasenia" class="text-danger"></span>
                                        </div>

                                        <!-- Botón de registrarse -->
                                        <div class="pt-1 mb-4">
                                            <button type="submit" class="btn btn-dark btn-lg btn-block">Registrarse</button>
                                        </div>
                                    </form>

                                    @if (ViewData.ModelState.ErrorCount > 0)
                                    {
                                        <div class="alert alert-danger mt-3">
                                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                            {
                                                <p>@error.ErrorMessage</p>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
