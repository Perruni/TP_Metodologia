@{
    ViewData["Title"] = "Formulario de Producto";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row">
        <!-- Columna izquierda para subir fotos -->
        <div class="col-md-6">
            <div class="card text-center">
                <!-- Imagen de vista previa -->
                <img id="imgPreview" src="~/images/house-placeholder.jpg" class="card-img-top" alt="Vista previa de la propiedad" style="max-height: 300px;" />
                <div class="card-body">
                    <label asp-for/="ProductImage" class="form-label">Subir fotos del producto o propiedad</label>
                    <input asp-for/="ProductImage" type="file" class="form-control" id="productImageInput" accept="image/*" />
                    <span asp-validation-for/="ProductImage" class="text-danger"></span>
                </div>
            </div>
        </div>

        
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for/="Title" class="form-label">Titulo de la publicación</label>
                    <input asp-for/="Title" class="form-control" />
                    <span asp-validation-for/="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for/="AuctionType" class="form-label">Seleccionar subasta</label>
                    <select asp-for/="AuctionType" class="form-select">
                        <option value="">Elegir...</option>
                        <option value="Subasta1">Subasta 1</option>
                        <option value="Subasta2">Subasta 2</option>
                    </select>
                    <span asp-validation-for/="AuctionType" class="text-danger"></span>
                </div>

                 <div class="mb-3">
                    <label asp-for/="BasePrice" class="form-label">Precio base</label>
                    <input asp-for/="BasePrice" class="form-control" type="text" id="BasePrice" />
                    <span asp-validation-for/="BasePrice" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for/="Description" class="form-label">Descripción</label>
                    <textarea asp-for/="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for/="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for/="DeliveryMethod" class="form-label">Método de Entrega</label>
                    <select asp-for/="DeliveryMethod" class="form-select">
                        <option value="">Elegir...</option>
                        <option value="Envio">Envío a domicilio</option>
                        <option value="Acuerdo">Acuerdo con el vendedor</option>
                    </select>
                    <span asp-validation-for/="DeliveryMethod" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-danger">Solicitar</button>
            </form>
        </div>
    </div>
</div>
