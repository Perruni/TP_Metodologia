@*
@model Web_Subasta.Models.ViewModels.

@{
    Layout = "_Layout";
}


<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.Titulo</title>
</head>
<body>
    <h2>Subasta: @Model.Titulo</h2>

    <div>
       <img src="@Model.ImagenUrl" alt="@Model.Titulo" width="300" /> <!-- Imagen traída de la base de datos -->
    </div>
  
    <h3>@Model.Titulo</h3> <!-- Título de la subasta -->
    <p><strong>Inicia:</strong> @Model.FechaInicio.ToString("dd/MM/yyyy HH:mm")</p>
    <p><strong>Finaliza:</strong> @Model.FechaFin.ToString("dd/MM/yyyy HH:mm")</p>

    <hr />

    <h4>PRECIO BASE: @Model.PrecioBase.ToString("N")</h4> <!-- Precio base dinámico -->

    <p><strong>CANTIDAD DE OFERTAS:</strong> @Model.CantidadOfertas</p> <!-- Cantidad de ofertas dinámica -->

    <p>
        @Model.Descripcion <!-- Descripción traída de la base de datos -->
    </p>

    <form method="post" asp-action="Ofertar">
        <!-- Enviar también el ID de la subasta para identificarla -->
        <input type="hidden" name="SubastaId" value="@Model.SubastaId" />

        <label for="montoOfertado">Monto a Ofertar</label>
        <input type="number" id="montoOfertado" name="MontoOfertado" step="0.01" value="0" required />
        <!-- TextBox de monto ofertado que acepta decimales -->

        <button type="submit">Ofertar</button>
    </form>
</body>
</html>
*@