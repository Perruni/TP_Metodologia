<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web_Subasta</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web_Subasta.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css"
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Icono MEW</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-link active" aria-current="page" href="#">Inicio</a>
                        <a class="nav-link" href="#">Subastas</a>
                        <a class="nav-link" href="#">Mis Ofertas</a>
                        <a class="nav-link" href="#"> Mis Productos</a>
                    </div>
                    <div class="navbar-buttons ms-auto">
                        <button class="nav-inicio" id="nav-inicio">Iniciar Sesión</button>
                        <button class="nav-registro">Registrate</button>
                    </div>

                </div>
            </div>
        </nav>
    </header>

       
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MEW- <a asp-area="" asp-controller="Home" asp-action="TerminosYCondiciones">Terminos y condiciones</a>
            <a asp-controller="poli-priva" asp-action="Politicias y Privacidad">Politicas y Privacidad</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
